<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.abhinandam.photoshareapp.UploadActivity">



    <include layout="@layout/content_upload"
        android:id="@+id/include" />
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >

        <Button
            android:id="@+id/loadimage"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Load Image"
            />
        <TextView
            android:id="@+id/targeturi"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            />
        <ImageView
            android:id="@+id/targetimage"
            android:layout_width="fill_parent"
            android:layout_height="250dp"
            />
        <EditText
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:hint="Photo Description"
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/uploadPrivate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload Private Photo"
            app:layout_anchor="@+id/include"
            app:layout_anchorGravity="bottom|center_horizontal"
            android:onClick="uploadPrivate"/>

        <Button
            android:id="@+id/uploadPublic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload Public Photo"
            app:layout_anchor="@+id/include"
            app:layout_anchorGravity="bottom|center_horizontal"
            android:onClick="uploadPublic"/>

        <Button
            android:id="@+id/browsePhotos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Browse Photos"
            app:layout_anchor="@+id/include"
            app:layout_anchorGravity="bottom|center_horizontal"
            android:onClick="browsePhotos"/>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
